<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.GameArea">

    <Pane fx:id="pane">
        <Canvas fx:id="canvas" height="600" layoutX="0" layoutY="0" width="1200" />
      <VBox prefHeight="600.0" prefWidth="1200.0">
         <children>
              <HBox alignment="CENTER" prefHeight="34.0" prefWidth="1200.0" style="-fx-background-color: gray;">
                  <Button fx:id="start" onMouseClicked="#start" text="Start">
                  <HBox.margin>
                     <Insets right="10.0" />
                  </HBox.margin>
               </Button>
                  <Button fx:id="skip" onMouseClicked="#skip" text="Skip">
                  <HBox.margin>
                     <Insets right="10.0" />
                  </HBox.margin>
               </Button>
                  <Button fx:id="home" onMouseClicked="#navHome" text="Home">
                  <HBox.margin>
                     <Insets right="40.0" />
                  </HBox.margin>
               </Button>
                  <Label fx:id="resultLabel" text="amount left" textFill="WHITE">
                  <HBox.margin>
                     <Insets right="5.0" />
                  </HBox.margin>
               </Label>
                  <TextField fx:id="result" editable="false" prefHeight="25.0" prefWidth="60.0" style="-fx-background-color: lightgray;" text="infinite" />
              </HBox>
         </children>
      </VBox>
    </Pane>


</AnchorPane>
