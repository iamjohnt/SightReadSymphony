            <ImageView fitHeight="400.0" fitWidth="400.0"><image><Image url="@../images/circle_of_fifths_pieces/6_oclock.png" /></image></ImageView>
            <ImageView fitHeight="400.0" fitWidth="400.0"><image><Image url="@../images/circle_of_fifths_pieces/7_oclock.png" /></image></ImageView>
            <ImageView fitHeight="400.0" fitWidth="400.0"><image><Image url="@../images/circle_of_fifths_pieces/8_oclock.png" /></image></ImageView>
            <ImageView fitHeight="400.0" fitWidth="400.0"><image><Image url="@../images/circle_of_fifths_pieces/9_oclock.png" /></image></ImageView>
