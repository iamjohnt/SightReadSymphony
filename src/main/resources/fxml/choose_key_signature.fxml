            <ImageView fitHeight="400.0" fitWidth="400.0"><image><Image url="@../images/circle_of_fifths_pieces/11_oclock.png" /></image></ImageView>
            <ImageView fitHeight="400.0" fitWidth="400.0"><image><Image url="@../images/circle_of_fifths_pieces/12_oclock.png" /></image></ImageView>

            <!-- these are the green highlights (also pie shaped) that will display over circle of fifths when selected -->
            <ImageView fx:id="one_highlight" fitHeight="400.0" fitWidth="400.0" onMouseClicked="#onClick_selectOrDeselect" onMouseEntered="#onMouseEnter_highlightGray" onMouseExited="#onMouseExit_removeHighlight" opacity="0.0">
                <image><Image url="@../images/circle_of_fifths_pieces/1_oclock_green_highlight.png" /></image>
            </ImageView>
            <ImageView fx:id="two_highlight" fitHeight="400.0" fitWidth="400.0" onMouseClicked="#onClick_selectOrDeselect" onMouseEntered="#onMouseEnter_highlightGray" onMouseExited="#onMouseExit_removeHighlight" opacity="0.0">
