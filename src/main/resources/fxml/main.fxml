                           <Label prefHeight="27.0" prefWidth="227.0" text="Midi File (Future update)">
                              <font>
                                 <Font size="18.0" />
                              </font>
                           </Label>
                           <ImageView fitHeight="198.0" fitWidth="200.0">
                              <image>
                                 <Image url="@../images/midifilesquare.PNG" />
                              </image>
                           </ImageView>
                        </children>
                     </VBox>
                  </children>
               </HBox>
            </children>
         </VBox>
        </VBox>
    </VBox>
