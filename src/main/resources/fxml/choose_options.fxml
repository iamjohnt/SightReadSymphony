<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ChooseOptions">
    <VBox alignment="TOP_CENTER" maxWidth="1000" minHeight="600.0" prefHeight="600.0" prefWidth="1000.0">
        <VBox alignment="TOP_CENTER" maxWidth="800" minWidth="800" spacing="5">
            <Text text="Choose Options"><font><Font size="48" /></font>
            <VBox.margin>
               <Insets bottom="50.0" top="50.0" />
            </VBox.margin></Text>
            <StackPane>
                <Rectangle fill="lightgrey" height="50" width="800" />
                <HBox>
                    <StackPane alignment="CENTER">
                        <Text text="Notation name"><font><Font size="32" /></font></Text>
                        <Rectangle fill="gray" height="50" opacity="0" width="400" />
                    </StackPane>
                    <StackPane alignment="CENTER_LEFT">
                        <Text text="ON"><font><Font size="32" /></font></Text>
                        <Rectangle onMouseClicked="#onChooseNotationName" onMouseEntered="#onHover" onMouseExited="#onUnhover" fill="lightgreen" height="50" opacity="0" width="100" />
                    </StackPane>
                    <StackPane alignment="CENTER_LEFT">
                        <Text text="OFF"><font><Font size="32" /></font></Text>
                        <Rectangle onMouseClicked="#onChooseNotationName" onMouseEntered="#onHover" onMouseExited="#onUnhover" fill="lightgreen" height="50" opacity="0" width="100" />
                    </StackPane>
                </HBox>
            </StackPane>

            <StackPane>
                <Rectangle fill="lightgrey" height="50" width="800" />
                <HBox>
                    <StackPane alignment="CENTER">
                        <Text text="Clef"><font><Font size="32" /></font></Text>
                        <Rectangle fill="gray" height="50" opacity="0" width="400" />
                    </StackPane>
                    <StackPane alignment="CENTER_LEFT">
                        <Text text="Bass"><font><Font size="32" /></font></Text>
                        <Rectangle onMouseClicked="#onChooseClef" onMouseEntered="#onHover" onMouseExited="#onUnhover" fill="lightgreen" height="50" opacity="0" width="100" />
                    </StackPane>
                    <StackPane alignment="CENTER_LEFT">
                        <Text text="Treble"><font><Font size="32" /></font></Text>
                        <Rectangle onMouseClicked="#onChooseClef" onMouseEntered="#onHover" onMouseExited="#onUnhover" fill="lightgreen" height="50" opacity="0" width="100" />
                    </StackPane>
                    <StackPane alignment="CENTER_LEFT">
                        <Text text="Both"><font><Font size="32" /></font></Text>
                        <Rectangle onMouseClicked="#onChooseClef" onMouseEntered="#onHover" onMouseExited="#onUnhover" fill="lightgreen" height="50" opacity="0" width="100" />
                    </StackPane>
                </HBox>
            </StackPane>

            <StackPane>
                <Rectangle fill="lightgrey" height="50" width="800" />
                <HBox alignment="CENTER_LEFT">
                    <StackPane alignment="CENTER">
                        <Text text="Bass Range"><font><Font size="32" /></font></Text>
                        <Rectangle fill="gray" height="50" opacity="0" width="400" />
                    </StackPane>
                    <ComboBox fx:id="minNoteBass" minWidth="80"><HBox.margin><Insets right="20.0" /></HBox.margin></ComboBox>
                    <ComboBox fx:id="maxNoteBass" minWidth="80"><HBox.margin><Insets right="20.0" /></HBox.margin></ComboBox>
                </HBox>
            </StackPane>
            <StackPane>
                <Rectangle fill="lightgrey" height="50" width="800" />
                <HBox alignment="CENTER_LEFT">
                    <StackPane alignment="CENTER">
                        <Rectangle fill="gray" height="50" opacity="0" width="400" />
                        <Text text="Treble Range"><font><Font size="32" /></font></Text>
                    </StackPane>
                    <ComboBox fx:id="minNoteTreble" minWidth="80"><HBox.margin><Insets right="20.0" /></HBox.margin></ComboBox>
                    <ComboBox fx:id="maxNoteTreble" minWidth="80"><HBox.margin><Insets right="20.0" /></HBox.margin></ComboBox>
                </HBox>
            </StackPane>
            <StackPane>
                <Rectangle fill="lightgrey" height="50" width="800" />
                <HBox>
                    <StackPane alignment="CENTER">
                        <Text text="Chord Note Count"><font><Font size="32" /></font></Text>
                        <Rectangle fill="gray" height="50" opacity="0" width="400" />
                    </StackPane>
                    <StackPane alignment="CENTER_LEFT">
                        <Text text="3"><font><Font size="32" /></font></Text>
                        <Rectangle onMouseClicked="#onChooseChordCount" onMouseEntered="#onHover" onMouseExited="#onUnhover" fill="lightgreen" height="50" opacity="0" width="100" />
                    </StackPane>
                    <StackPane alignment="CENTER_LEFT">
                        <Text text="4"><font><Font size="32" /></font></Text>
                        <Rectangle onMouseClicked="#onChooseChordCount" onMouseEntered="#onHover" onMouseExited="#onUnhover" fill="lightgreen" height="50" opacity="0" width="100" />
                    </StackPane>
                </HBox>
            </StackPane>
            <StackPane>
                <Rectangle fill="lightgrey" height="50" width="800" />
                <HBox>
                    <StackPane alignment="CENTER">
                        <Text text="Chord Inversion"><font><Font size="32" /></font></Text>
                        <Rectangle fill="gray" height="50" opacity="0" width="400" />
                    </StackPane>
                    <StackPane alignment="CENTER_LEFT">
                        <Text text="Root"><font><Font size="32" /></font></Text>
                        <Rectangle onMouseClicked="#onChooseChordInversion" onMouseEntered="#onHover" onMouseExited="#onUnhover" fill="lightgreen" height="50" opacity="0" width="100" />
                    </StackPane>
                    <StackPane alignment="CENTER_LEFT">
                        <Text text="1"><font><Font size="32" /></font></Text>
                        <Rectangle onMouseClicked="#onChooseChordInversion" onMouseEntered="#onHover" onMouseExited="#onUnhover" fill="lightgreen" height="50" opacity="0" width="100" />
                    </StackPane>
                    <StackPane alignment="CENTER_LEFT">
                        <Text text="2"><font><Font size="32" /></font></Text>
                        <Rectangle onMouseClicked="#onChooseChordInversion" onMouseEntered="#onHover" onMouseExited="#onUnhover" fill="lightgreen" height="50" opacity="0" width="100" />
                    </StackPane>
                    <StackPane alignment="CENTER_LEFT">
                        <Text text="3"><font><Font size="32" /></font></Text>
                        <Rectangle onMouseClicked="#onChooseChordInversion" onMouseEntered="#onHover" onMouseExited="#onUnhover" fill="lightgreen" height="50" opacity="0" width="100" />
                    </StackPane>
                </HBox>
            </StackPane>
            <Button text="Show Advanced"></Button>
        </VBox>
    </VBox>
</AnchorPane>
